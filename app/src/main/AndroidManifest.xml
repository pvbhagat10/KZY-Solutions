<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KZYSolutions"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3099495950409182~1086819528" />

        <activity
            android:name=".activities.PayPlatformFeeActivity"
            android:exported="false"
            android:label="@string/title_activity_pay_platform_fee"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.FlatApprovalActivity"
            android:exported="false"
            android:label="@string/title_activity_flat_approval"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.FlatPaymentHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.PaymentsActivity"
            android:exported="false"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.FlatDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_flat_details"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.AddNewFlatDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_add_new_flat_details"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.FlatUsers"
            android:exported="false"
            android:label="@string/title_activity_flat_users"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.AllFlatUsersPaymentsActivity"
            android:exported="false"
            android:label="@string/title_activity_history"
            android:theme="@style/Theme.KZYSolutions" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".activities.AddNewFlatActivity"
            android:exported="false"
            android:label="@string/title_activity_flat_user_details"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.NewBuildingDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_account_form"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.CreateNewUserActivity"
            android:exported="true"
            android:label="@string/title_activity_select_role"
            android:theme="@style/Theme.KZYSolutions" />
        <activity
            android:name=".activities.PhoneLogin"
            android:exported="true"
            android:theme="@style/Theme.KZYSolutions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KZYSolutions" />
    </application>

</manifest>